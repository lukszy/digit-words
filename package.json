{
  "name": "digit-words",
  "version": "0.11.0",
  "description": "Digits to words converted. Language support: English, Polish, Czech.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "digit-words": "./dist/cjs/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "digits",
    "words",
    "numbers",
    "typescript",
    "polish",
    "czech",
    "english"
  ],
  "repository": {
    "url": "https://github.com/dobrysmak/digit-words"
  },
  "scripts": {
    "test": "npx jest",
    "build": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run build:umd && npm run build:cli",
    "build:clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:umd": "tsc -p tsconfig.umd.json",
    "build:cli": "tsc -p tsconfig.cjs.json --outDir dist/cjs && chmod +x dist/cjs/cli.js",
    "serve": "npm run build && vite serve example",
    "publish": "npm run build && npm publish"
  },
  "author": "Lukasz Szymanski",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
