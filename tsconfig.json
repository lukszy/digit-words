{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": false,
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "exclude": ["**/*.spec.ts", "example/**", "node_modules"],
  "include": ["src/index.ts"]
}
